{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "Enrich": [
      "WithThreadId"
    ],
    "IncludeScopes": true,
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Temp\\Logs\\SchulBusserl\\SchulBusserl-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:o} {Level:w3}] ({RequestId}) {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": null,
          "retainedFileTimeLimit": "30.00:00:00",
          "shared": true,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 104857600
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:o} {Level:w3} {ThreadId}] ({RequestId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:o} {Level:w3} {ThreadId}] ({RequestId}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
