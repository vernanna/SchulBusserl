{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "Enrich": [
      "WithThreadId"
    ],
    "IncludeScopes": true,
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\logs\\SchulBusserl-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:o} {Level:w3}] ({RequestId}) {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": null,
          "retainedFileTimeLimit": "30.00:00:00",
          "shared": true,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 104857600
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
